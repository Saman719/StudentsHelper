<!DOCTYPE html>
<html lang="en">

<head>

    <style>
        .container {
            height: 94vh;
        }
        
        .center {
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }
        
        .button {
            width: 600px;
            height: 100px;
            background-color: #4CAF50;
            /* Green */
            border: none;
            color: white;
            padding: 16px 32px;
            text-align: center;
            text-decoration: none;
            display: block;
            font-size: 16px;
            margin: 15px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
        }
        
        @media screen and (max-width: 1024px) {
            .button {
                width: 200px;
            }
        }
        
        .button1 {
            background-color: #4CAF50;
            color: white;
        }
        
        .button1:hover {
            background-color: #52c255;
        }
        
        .button2 {
            background-color: #2659ff;
            color: white;
        }
        
        .button2:hover {
            background-color: #4772ff;
        }
    </style>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Studnets Helper</title>
</head>

<body>
    <%- include('./header.ejs') %>
        <div class="container">
            <div class="center">
                <button class="button button1" onclick="
                window.location.href = '/project/create'
                ">Place Project</button>
                <button class="button button2" onclick="
                window.location.href = '/project'
                ">Do Project</button>
            </div>
        </div>
</body>

</html>